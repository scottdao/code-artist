<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="code.artist.core.dao.system.MenuMapper">

    <resultMap id="menuListMap" type="Menu">
        <id column="id" property="id"></id>
        <collection property="children" select="selChildMenuByParentId" column="{parentId=id,userId=userId}"></collection>
    </resultMap>

    <select id="selMenuByUserId" resultMap="menuListMap">
        SELECT m.`id`,m.`name`,m.`url`,m.`sort`,m.`is_leaf` AS isLeaf,m.`parent_id` AS parentId,m.`status`,u.id AS userId
        FROM t_menu m
        LEFT JOIN t_role_menu rm ON rm.menu_id = m.id
        LEFT JOIN t_role r ON r.id = rm.role_id
        LEFT JOIN t_user_role ur ON ur.role_id = r.id
        LEFT JOIN t_user u ON u.id = ur.user_id
        WHERE m.is_leaf = 0 AND u.id = #{userId} AND m.status=1
        ORDER BY m.sort
    </select>
    <select id="selChildMenuByParentId" resultType="Menu">
        SELECT m.`id`,m.`name`,m.`url`,m.`sort`,m.`is_leaf` AS isLeaf,m.`parent_id` AS parentId,m.`status`
        FROM t_menu m
        LEFT JOIN t_role_menu rm ON rm.menu_id = m.id
        LEFT JOIN t_role r ON r.id = rm.role_id
        LEFT JOIN t_user_role ur ON ur.role_id = r.id
        LEFT JOIN t_user u ON u.id = ur.user_id
        WHERE m.is_leaf = 1 AND u.id = #{userId} AND m.parent_id=#{parentId} AND m.status=1
        ORDER BY m.sort
    </select>

    <resultMap id="menuMap" type="code.artist.core.model.system.Menu" >
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="url" property="url" />
        <result column="sort" property="sort" />
        <result column="is_leaf" property="isLeaf" />
        <result column="parent_id" property="parentId" />
        <result column="status" property="status" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="description" property="description" />
    </resultMap>

    <insert id="insEntity" parameterType="code.artist.core.model.system.Menu">
        INSERT INTO t_menu (<include refid="menuList"></include>) VALUES (#{id},#{name},#{url},#{sort},#{isLeaf},#{parentId},1,#{createUser},#{createTime},#{updateUser},#{updateTime},#{description})
    </insert>

    <select id="selEntityList" resultMap="menuMap">
        SELECT <include refid="menuList"></include> FROM t_menu WHERE status=1
    </select>

    <update id="updEntityById" parameterType="code.artist.core.model.system.Menu">
        UPDATE t_menu
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name !=''">
                `name`=#{name},
            </if>
            <if test="url != null and url !=''">
                `url`=#{url},
            </if>
            <if test="sort != null and sort !=''">
                `sort`=#{sort},
            </if>
            <if test="isLeaf != null and isLeaf !=''">
                `is_leaf`=#{isLeaf},
            </if>
            <if test="parentId != null and parentId !=''">
                `parent_id`=#{parentId},
            </if>
            <if test="status != null and status !=''">
                `status`=#{status},
            </if>
            <if test="createUser != null and createUser !=''">
                `create_user`=#{createUser},
            </if>
            <if test="createTime != null">
                `create_time`=#{createTime},
            </if>
            <if test="updateUser != null and updateUser !=''">
                `update_user`=#{updateUser},
            </if>
            <if test="updateTime != null">
                `update_time`=#{updateTime},
            </if>
            <if test="description != null and description !=''">
                `description`=#{description},
            </if>
        </trim>
        WHERE `id`=#{id}
    </update>

</mapper>