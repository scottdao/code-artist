<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="code.artist.core.dao.system.UserMapper">

    <sql id="userList">
        `id`,`username`,`password`,`realname`,`phone`,`address`,`is_admin`,`status`,`create_user`,`create_time`,`update_user`,`update_time`,`description`
    </sql>

    <insert id="insEntity" parameterType="User">
        INSERT INTO t_user (<include refid="userList"></include>) VALUES (#{id},#{username},#{password},#{realname},#{phone},#{address},#{isAdmin},1,#{createUser},#{createTime},#{updateUser},#{updateTime},#{description})
    </insert>

    <select id="selUserByName" parameterType="User" resultType="User">
        SELECT <include refid="userList"></include> FROM t_user WHERE username=#{username} AND status=1
    </select>

    <select id="selEntityList" resultType="User">
        SELECT <include refid="userList"></include> FROM t_user WHERE status=1 ORDER BY create_time
    </select>

    <update id="updEntityById" parameterType="User">
        UPDATE t_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null and username !=''">
                `username`=#{username},
            </if>
            <if test="password != null and password !=''">
                `password`=#{password},
            </if>
            <if test="realname != null and realname !=''">
                `realname`=#{realname},
            </if>
            <if test="phone != null and phone !=''">
                `phone`=#{phone},
            </if>
            <if test="address != null and address !=''">
                `address`=#{address},
            </if>
            <if test="isAdmin != null">
                `is_admin`=#{isAdmin},
            </if>
            <if test="status != null">
                `status`=#{status},
            </if>
            <if test="createUser != null and createUser !=''">
                `create_user`=#{createUser},
            </if>
            <if test="createTime != null">
                `create_time`=#{createTime},
            </if>
            <if test="updateUser != null and updateUser !=''">
                `update_user`=#{updateUser},
            </if>
            <if test="updateTime != null">
                `update_time`=#{updateTime},
            </if>
            <if test="description != null and description !=''">
                `description`=#{description},
            </if>
        </trim>
        WHERE `id`=#{id}
    </update>

</mapper>