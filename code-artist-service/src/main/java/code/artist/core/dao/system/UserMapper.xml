<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="code.artist.core.dao.system.UserMapper">

    <sql id="userList">
        `id`,`username`,`password`,`realname`,`phone`,`address`,`is_admin`,`status`,`create_user`,`create_time`,`update_user`,`update_time`,`description`
    </sql>

    <resultMap id="userMap" type="User" >
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="realname" property="realname" />
        <result column="phone" property="phone" />
        <result column="address" property="address" />
        <result column="is_admin" property="isAdmin" />
        <result column="status" property="status" />
        <result column="create_user" property="createUser" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
        <result column="update_time" property="updateTime" />
        <result column="description" property="description" />
    </resultMap>

    <insert id="insEntity" parameterType="User">
        INSERT INTO t_user (<include refid="userList"></include>) VALUES (#{id},#{username},#{password},#{realname},#{phone},#{address},#{isAdmin},#{status},#{createUser},#{createTime},#{updateUser},#{updateTime},#{description})
    </insert>

    <select id="selUserByUser" parameterType="User" resultMap="userMap">
        SELECT <include refid="userList"></include> FROM t_user WHERE username=#{username} AND password=#{password}
    </select>

    <select id="selEntityList" resultMap="userMap">
        SELECT <include refid="userList"></include> FROM t_user
    </select>

    <update id="updEntityById" parameterType="User">
        UPDATE t_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null and username !=''">
                `username`=#{username},
            </if>
            <if test="password != null and password !=''">
                `password`=#{password},
            </if>
            <if test="realname != null and realname !=''">
                `realname`=#{realname},
            </if>
            <if test="phone != null and phone !=''">
                `phone`=#{phone},
            </if>
            <if test="address != null and address !=''">
                `address`=#{address},
            </if>
            <if test="isAdmin != null">
                `is_admin`=#{isAdmin},
            </if>
            <if test="status != null">
                `status`=#{status},
            </if>
            <if test="createUser != null and createUser !=''">
                `create_user`=#{createUser},
            </if>
            <if test="createTime != null">
                `create_time`=#{createTime},
            </if>
            <if test="updateUser != null and updateUser !=''">
                `update_user`=#{updateUser},
            </if>
            <if test="updateTime != null">
                `update_time`=#{updateTime},
            </if>
            <if test="description != null and description !=''">
                `description`=#{description},
            </if>
        </trim>
        WHERE `id`=#{id}
    </update>

</mapper>